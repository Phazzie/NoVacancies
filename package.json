{
  "name": "sydney-story",
  "version": "1.0.0",
  "description": "No Vacancies - A choose-your-own-adventure PWA about invisible labor and load-bearing",
  "type": "module",
  "scripts": {
    "test": "node tests/smokeTest.js && node tests/threadTest.js && node tests/integrationTest.js && node tests/rendererNodeTest.js",
    "test:watch": "nodemon --watch js --watch tests --exec npm test",
    "lint": "eslint js/",
    "lint:fix": "eslint js/ --fix",
    "format": "prettier --write \"js/**/*.js\" \"src/**/*.{ts,svelte,css}\" \"*.css\" \"*.html\"",
    "serve": "vite preview --host 0.0.0.0 --port 8080",
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "test:renderer": "node tests/rendererNodeTest.js",
    "test:e2e": "playwright test",
    "test:e2e:stable": "node tests/runE2EStability.js"
  },
  "keywords": [
    "pwa",
    "game",
    "interactive-fiction"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@rollup/rollup-linux-x64-gnu": "^4.57.1",
    "@sveltejs/adapter-vercel": "^5.10.0",
    "@sveltejs/kit": "^2.48.4",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "http-server": "^14.1.1",
    "jsdom": "^28.0.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1",
    "svelte": "^5.43.3",
    "svelte-check": "^4.3.3",
    "typescript": "^5.9.3",
    "vite": "^7.1.11"
  }
}
