# Default local-safe mode (no live AI calls)
AI_PROVIDER=mock
AI_OUTAGE_MODE=mock_fallback
ENABLE_GROK_TEXT=0
ENABLE_GROK_IMAGES=0
ENABLE_PROVIDER_PROBE=0

# Required when Grok/provider probe is enabled
XAI_API_KEY=

# Non-production only: must stay disabled in production
AI_AUTH_BYPASS=0

# Optional model overrides
GROK_TEXT_MODEL=grok-4-1-fast-reasoning
GROK_IMAGE_MODEL=grok-imagine-image

# Optional reliability tuning
AI_MAX_OUTPUT_TOKENS=1800
AI_REQUEST_TIMEOUT_MS=20000
AI_MAX_RETRIES=2
