# Grok-only mode
AI_PROVIDER=grok
AI_OUTAGE_MODE=hard_fail
ENABLE_GROK_TEXT=1
ENABLE_GROK_IMAGES=0
ENABLE_PROVIDER_PROBE=0

# Required in Grok-only mode
XAI_API_KEY=

# Disabled in Grok-only mode
AI_AUTH_BYPASS=0

# Optional model overrides
GROK_TEXT_MODEL=grok-4-1-fast-reasoning
GROK_IMAGE_MODEL=grok-imagine-image

# Optional reliability tuning
AI_MAX_OUTPUT_TOKENS=1800
AI_REQUEST_TIMEOUT_MS=20000
AI_MAX_RETRIES=2
